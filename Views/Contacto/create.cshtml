@model TPEZANO.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}

<div class="container">
    <h1 class="text-center mb-4">Formulario de contacto</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Contacto" asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CorreoElectronico" class="control-label"></label>
                    <input asp-for="CorreoElectronico" class="form-control" />
                </div>

               <div class="form-group">
                     <label for="exampleFormControlTextarea1">Reclamos y/o Sugerencias</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                 </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary my-3">Enviar</button>
                </div>
            </form>
             <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
        </div>
    </div>
</div>
