@model IEnumerable<TPEZANO.Models.Producto>

@{
    ViewData["Title"] = "Catalogo";
}

    <div class="container">
        <h1>CAT√ÅLOGO</h1>
        <h1>@ViewData["Message"]</h1>
        <div class="row">
            <div class="col">
                <div id="products" class="mb-3">
                    <div class="row">
                        @foreach (var item in Model){
                            <div class="col-sm-4">
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="card-img-actions">
                                            <img  class="card-img-top" src="img/@item.ImageName" alt="@item.ImageName">
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                        <p class="card-text">S/. @Html.DisplayFor(modelItem => item.Precio)</p>
                                        <a class="btn btn-primary" asp-action="Add" asp-route-id="@item.Id" >Add</a>
                                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View</a>
                                    </div>
                                </div>
                            </div> 
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
 
