@model TPEZANO.Models.Producto;

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1>Detalles</h1>
<div class="container">
    <div class="col-sm-4">
        <div class="card mb-3">
            <div class="card-body">
                <div class="card-img-actions">
                    <img class="img-responsive" width="200px" src="/img/@Html.DisplayFor(model => model.ImageName)" alt="">
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Descripcion)</p>
                <h5 class="card-title">S/ @Html.DisplayFor(model => model.Precio)</h5>
            <a class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
</div>
